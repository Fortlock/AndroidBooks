<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Book">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="TextView"
                android:layout_height="wrap_content"
                android:layout_weight="0.85"
                android:id="@+id/authorText"
                app:layout_constraintHorizontal_weight="1"
                android:textSize="24sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_width="match_parent" android:textStyle="italic"/>
        <TextView
                android:text="TextView"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/bookText"
                app:layout_constraintHorizontal_weight="1"
                android:textSize="24sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_width="match_parent"
                android:textAlignment="viewEnd" android:textStyle="italic"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>